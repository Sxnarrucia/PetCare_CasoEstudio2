@model PetCare_CasoEstudio2.Models.IndexViewModel
@{
    ViewBag.Title = "Perfil de Usuario";
}

<style>
    .perfil-container {
        max-width: 800px;
        margin: auto;
        margin-top: 30px;
    }

    .perfil-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 0 25px rgba(0, 0, 0, 0.05);
        background: #ffffff;
        padding: 30px;
    }

        .perfil-card h2 {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #333;
        }

    .perfil-datos dt {
        font-weight: 600;
        color: #555;
    }

    .perfil-datos dd {
        margin-bottom: 20px;
        color: #222;
    }

    .btn-link {
        padding-left: 0;
        font-weight: 500;
    }

    .badge-rol {
        font-size: 0.95rem;
        padding: 5px 10px;
        border-radius: 20px;
        background: #e9ecef;
        color: #333;
    }
</style>

<div class="perfil-container">
    <div class="perfil-card">
        <h2>Mi Perfil</h2>

        @if (!String.IsNullOrEmpty(ViewBag.StatusMessage))
        {
            <div class="alert alert-success">@ViewBag.StatusMessage</div>
        }

        <dl class="row perfil-datos">
            <dt class="col-sm-4">Nombre de Usuario:</dt>
            <dd class="col-sm-8">@User.Identity.Name</dd>

            <dt class="col-sm-4">Correo Electrónico:</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Teléfono:</dt>
            <dd class="col-sm-8">@Model.PhoneNumber</dd>

            <dt class="col-sm-4">Rol:</dt>
            <dd class="col-sm-8">
                <span class="badge badge-rol">@Model.Rol</span>
            </dd>

            <dt class="col-sm-4">Contraseña:</dt>
            <dd class="col-sm-8">
                @if (Model.HasPassword)
                {
                    @Html.ActionLink("Cambiar contraseña", "ChangePassword", null, new { @class = "btn btn-sm btn-outline-primary" })
                }
                else
                {
                    @Html.ActionLink("Crear contraseña", "SetPassword", null, new { @class = "btn btn-sm btn-outline-secondary" })
                }
            </dd>
        </dl>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
