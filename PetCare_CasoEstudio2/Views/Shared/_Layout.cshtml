@inherits System.Web.Mvc.WebViewPage

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PetCare</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.4rem;
        }

        .nav-link {
            color: #ddd !important;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #fff !important;
            }

        footer {
            margin-top: 50px;
            text-align: center;
            color: #888;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark shadow-sm">
        <div class="container">
            @Html.ActionLink("PetCare 🐾", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">@Html.ActionLink("Inicio", "Index", "Home", null, new { @class = "nav-link" })</li>

                    @if (User.IsInRole("Cliente") || User.IsInRole("Asistente") || User.IsInRole("Veterinario") || User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">@Html.ActionLink("Mascotas", "Index", "Mascotas", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Citas", "Index", "Citas", null, new { @class = "nav-link" })</li>
                    }


                    @if (User.IsInRole("Veterinario") || User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">@Html.ActionLink("Historiales", "Index", "Historials", null, new { @class = "nav-link" })</li>
                    }

                    @if (User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">@Html.ActionLink("Usuarios", "Index", "User", null, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Dashboard", "Index", "Dashboard", null, new { @class = "nav-link" })</li>
                    }

                </ul>

                <ul class="navbar-nav ms-auto">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PetCare | Desarrollado por el Grupo 5</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
