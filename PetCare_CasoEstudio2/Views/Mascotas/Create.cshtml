@model PetCare_CasoEstudio2.Models.Mascotas.Mascota

@{
    ViewBag.Title = "Registrar Mascota";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">🐾 Registrar Nueva Mascota</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(m => m.NombreMascota, htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.NombreMascota, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.EspecieMascota, htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.DropDownListFor(m => m.EspecieMascota, (SelectList)ViewBag.Especies, "Seleccione una especie", new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.RazaMascota, htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.RazaMascota, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.EdadMascota, htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.EditorFor(m => m.EdadMascota, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.PesoMascota, htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.EditorFor(m => m.PesoMascota, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.UsuarioId, "Propietario", htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.DropDownList("UsuarioId", null, "Seleccione un propietario", new { @class = "form-control" })
        </div>

        <div class="d-flex justify-content-between">
            <input type="submit" value="✅ Registrar" class="btn btn-success" />
            @Html.ActionLink("⬅️ Cancelar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }

    <div class="mt-3">
        @Html.ActionLink("🔙 Volver a la lista", "Index")
    </div>
</div>
