@model PetCare_CasoEstudio2.Models.Citas.Cita

@{
    ViewBag.Title = "Registrar Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">➕ Registrar Nueva Cita</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(model => model.MascotaId, "Mascota", new { @class = "form-label fw-bold" })
            @Html.DropDownList("MascotaId", null, "Seleccione una mascota", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MascotaId, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.UsuarioId, "Veterinario", new { @class = "form-label fw-bold" })
            @Html.DropDownList("UsuarioId", null, "Seleccione un veterinario", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UsuarioId, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.FechaCita, "Fecha y Hora", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(model => model.FechaCita, new { @class = "form-control", type = "datetime-local" })
            @Html.ValidationMessageFor(model => model.FechaCita, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.MotivoConsulta, "Motivo de Consulta", new { @class = "form-label fw-bold" })
            @Html.EditorFor(model => model.MotivoConsulta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MotivoConsulta, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex justify-content-between mt-4">
            <input type="submit" value="💾 Registrar" class="btn btn-success" />
            @Html.ActionLink("⬅️ Cancelar", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
