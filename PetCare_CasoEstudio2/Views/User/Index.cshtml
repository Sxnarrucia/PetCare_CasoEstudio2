@model IEnumerable<PetCare_CasoEstudio2.Models.ApplicationUser>
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Lista de Usuarios</h2>
        @Html.ActionLink("➕ Crear Usuario", "Create", null, new { @class = "btn btn-success" })
    </div>

    <table class="table table-bordered table-hover table-striped">
        <thead class="thead-dark bg-dark text-white">
            <tr>
                <th scope="col">Usuario</th>
                <th scope="col">Nombre Completo</th>
                <th scope="col">Correo</th>
                <th scope="col">Teléfono</th>
                <th scope="col">Rol</th>
                <th scope="col" class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>@item.NombreCompleto</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Rol</td>
                    <td class="text-center">
                        @Html.ActionLink("✏️ Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-primary me-2" })
                        @Html.ActionLink("🗑️ Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
