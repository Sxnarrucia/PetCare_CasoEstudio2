@model PetCare_CasoEstudio2.Models.Historial.Historial

@{
    ViewBag.Title = "Crear Historial Médico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">📝 Registrar Nuevo Historial Médico</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="mb-3">
            @Html.LabelFor(model => model.CitaID, "Cita Relacionada", htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.DropDownList("CitaID", null, "Seleccione una cita", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CitaID, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Diagnostico, htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(model => model.Diagnostico, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Diagnostico, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Tratamiento, htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(model => model.Tratamiento, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Tratamiento, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(model => model.Observaciones, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })
        </div>

        <div class="d-flex justify-content-between">
            <input type="submit" value="✅ Crear" class="btn btn-success" />
            @Html.ActionLink("⬅️ Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
