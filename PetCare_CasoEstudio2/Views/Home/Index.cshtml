@{
    ViewBag.Title = "Inicio";
}

<main>
    <div class="jumbotron text-center bg-light shadow rounded p-5 mt-4">
        <h1 class="display-4 text-primary fw-bold">Bienvenido a PetCare 🐾</h1>
        <p class="lead text-secondary">Tu clínica veterinaria de confianza para el bienestar de tus mascotas.</p>
        <hr class="my-4" />
        <p class="mb-3">Cuidamos a tus amigos peludos con amor, profesionalismo y dedicación.</p>
        <a class="btn btn-success btn-lg me-2" href="@Url.Action("Create", "Citas")">Agendar Cita</a>
        <a class="btn btn-outline-secondary btn-lg" href="@Url.Action("Index", "Mascotas")">Ver Mascotas</a>
    </div>

    <div class="row text-center mt-5">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow h-100">
                <div class="card-body">
                    <h4 class="card-title text-info">🐶 Atención Médica</h4>
                    <p class="card-text">Consulta general, vacunación, desparasitación y tratamientos para tus mascotas.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow h-100">
                <div class="card-body">
                    <h4 class="card-title text-success">📋 Historial Veterinario</h4>
                    <p class="card-text">Revisá el historial médico completo de tus mascotas con diagnósticos y tratamientos.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow h-100">
                <div class="card-body">
                    <h4 class="card-title text-warning">👥 Equipo Profesional</h4>
                    <p class="card-text">Contamos con veterinarios altamente capacitados para brindar la mejor atención.</p>
                </div>
            </div>
        </div>
    </div>
</main>
