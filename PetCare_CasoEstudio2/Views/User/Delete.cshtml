@model PetCare_CasoEstudio2.Models.ApplicationUser

@{
    ViewBag.Title = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">⚠️ Confirmación de Eliminación</h4>
        </div>
        <div class="card-body">
            <h5>¿Estás seguro que deseas eliminar al usuario <strong>@Model.UserName</strong>?</h5>
            <p class="text-muted">Esta acción no se puede deshacer.</p>

            @using (Html.BeginForm("DeleteConfirmed", "User", new { id = Model.Id }))
            {
                @Html.AntiForgeryToken()

                <div class="d-flex gap-2 mt-4">
                    <input type="submit" value="🗑️ Eliminar" class="btn btn-danger" />
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>
