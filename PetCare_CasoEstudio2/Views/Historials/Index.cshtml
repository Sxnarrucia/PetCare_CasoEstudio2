@model IEnumerable<PetCare_CasoEstudio2.Models.Historial.Historial>

@{
    ViewBag.Title = "Historiales Médicos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">📋 Historiales Médicos</h2>
        @Html.ActionLink("➕ Registrar Historial", "Create", null, new { @class = "btn btn-success" })
    </div>

    <table class="table table-bordered table-hover shadow-sm rounded">
        <thead class="table-primary text-center">
            <tr>
                <th>Veterinario</th>
                <th>Diagnóstico</th>
                <th>Tratamiento</th>
                <th>Observaciones</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Cita?.Usuario?.NombreCompleto)</td>
                    <td>@item.Diagnostico</td>
                    <td>@item.Tratamiento</td>
                    <td>@item.Observaciones</td>
                    <td class="text-center">
                        @Html.ActionLink("✏️ Editar", "Edit", new { id = item.IdHistorial }, new { @class = "btn btn-sm btn-warning me-1" })
                        @Html.ActionLink("🔍 Detalles", "Details", new { id = item.IdHistorial }, new { @class = "btn btn-sm btn-info me-1" })
                        @Html.ActionLink("🗑️ Eliminar", "Delete", new { id = item.IdHistorial }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
